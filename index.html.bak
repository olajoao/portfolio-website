    // Shiny reflection
    g.add(box(0.18, 0.18, 0.06, mat(0xffffff, {roughness: 0.1}), cx + 0.18, cy + 0.18, cz + 0.07));
    g.add(box(0.1, 0.1, 0.05, mat(0xffffff, {roughness: 0.1}), cx - 0.12, cy + 0.08, cz + 0.07));
    return g;
  }

  character.add(funkoEye(-0.58, 8.3, 1.22));
