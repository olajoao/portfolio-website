---
import SectionHeader from './SectionHeader.astro';

interface Language {
  name: string;
  width: string;
  level: string;
}

const languages: Language[] = [
  { name: 'PORTUGUESE', width: '100', level: 'Native' },
  { name: 'ENGLISH', width: '80', level: 'Professional' },
];
---

<section class="section" id="education">
  <SectionHeader number="05" title="TRAINING ARC" />

  <div class="edu-block animate-in">
    <span class="edu-icon">ðŸŽ“</span>
    <div>
      <div class="edu-degree">Systems Analysis & Development</div>
      <div class="edu-school">FAEL</div>
    </div>
  </div>

  <div class="languages-block animate-in">
    <div class="skill-category">LANGUAGE PROFICIENCY</div>
    {languages.map((lang) => (
      <div class="lang-row">
        <span class="lang-name">{lang.name}</span>
        <div class="lang-bar-bg">
          <div class="lang-bar-fill" data-width={lang.width} style="width: 0%;"></div>
        </div>
        <span class="lang-level">{lang.level}</span>
      </div>
    ))}
  </div>
</section>

<style>
  .edu-block {
    background: var(--panel-bg);
    border: 1px solid var(--panel-border);
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .edu-icon {
    font-size: 48px;
  }

  .edu-degree {
    font-family: 'Press Start 2P', monospace;
    font-size: 12px;
    color: var(--neon-green);
    text-shadow: 0 0 8px rgba(57, 255, 20, 0.3);
    margin-bottom: 0.4rem;
    line-height: 1.6;
  }

  .edu-school {
    font-size: 22px;
    color: var(--neon-cyan);
  }

  .languages-block {
    margin-top: 1.5rem;
    background: var(--panel-bg);
    border: 1px solid var(--panel-border);
    padding: 2rem;
  }

  .skill-category {
    font-family: 'Press Start 2P', monospace;
    font-size: 10px;
    color: var(--neon-yellow);
    text-shadow: 0 0 6px rgba(255, 230, 0, 0.3);
    margin-bottom: 1.2rem;
    letter-spacing: 1px;
  }

  .lang-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .lang-row:last-child { margin-bottom: 0; }

  .lang-name {
    font-family: 'Press Start 2P', monospace;
    font-size: 10px;
    color: var(--neon-green);
    min-width: 130px;
  }

  .lang-bar-bg {
    flex: 1;
    height: 14px;
    background: rgba(57, 255, 20, 0.08);
    border: 1px solid var(--panel-border);
    position: relative;
    overflow: hidden;
  }

  .lang-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--neon-green), var(--neon-cyan));
    box-shadow: 0 0 10px rgba(57, 255, 20, 0.3);
    transition: width 1.5s ease-out;
  }

  .lang-level {
    font-size: 16px;
    color: var(--text-dim);
    min-width: 80px;
    text-align: right;
  }

  @media (max-width: 768px) {
    .edu-block { flex-direction: column; text-align: center; }
  }
</style>
