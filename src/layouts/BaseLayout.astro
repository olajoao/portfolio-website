---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Senior Frontend Engineer with 6+ years building scalable web apps. Expert in TypeScript, React & Node.js. Based in Brazil, open to remote worldwide.',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = new URL('/og-image.svg', Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="Jo達o K端ster">
  <meta name="theme-color" content="#0a0a0f">
  <link rel="canonical" href={canonicalURL.href}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="sitemap" href="/sitemap-index.xml">

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL.href}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImage.href}>
  <meta property="og:locale" content="en_US">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage.href}>

  <!-- JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'Person',
    name: 'Jo達o K端ster',
    url: Astro.site?.href,
    jobTitle: 'Senior Frontend Engineer',
    knowsAbout: ['TypeScript', 'React', 'Node.js', 'Vue.js', 'Next.js', 'GraphQL'],
    sameAs: [
      'https://github.com/olajoao',
      'https://linkedin.com/in/joaokusterv',
    ],
  })} />

  <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=VT323&family=IBM+Plex+Mono:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
  <slot />
  <script src="../scripts/scroll-animations.ts"></script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
